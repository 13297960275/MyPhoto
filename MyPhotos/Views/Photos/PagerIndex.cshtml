@model JPager.Net.PagerResult<MyPhotos.Models.Photos>

@{
    ViewBag.Title = "图片列表";
}

<style>
    #edde {
        height: 95%;
        /*padding: 0 12px;*/
        position: absolute;
        top: 25%;
        right: 12px;
    }

        #edde li {
            /*padding: 20px;*/
            height: 25%;
            text-align: center;
            line-height: 24px;
            list-style: none;
        }

            #edde li img {
                width: 18px;
                height: 18px;
            }

    #img {
        width: 90%;
        padding-left: 12px;
        position: absolute;
        bottom: 5px;
        left: 12px;
        /*background-color: antiquewhite;*/
    }

        #img li {
            width: 25%;
            float: left;
            text-align: center;
            line-height: 24px;
            list-style: none;
        }

            #img li img {
                width: 18px;
                height: 18px;
            }

            #img li span {
                color: antiquewhite;
                text-align: center;
                list-style: none;
            }

    .dtl27 {
        width: 100%;
        position: relative;
        overflow: hidden;
        -webkit-box-shadow: 1px 1px 3px 0 rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 1px 1px 3px 0 rgba(0, 0, 0, 0.3);
        box-shadow: 1px 1px 3px 0 rgba(0, 0, 0, 0.3);
    }

        .dtl27 img {
            position: relative;
            width: 100%;
            height: 170px;
            top: 0;
            left: 0;
            -webkit-transition: all 0.3s;
            -moz-transition: all 0.3s;
            -o-transition: all 0.3s;
            transition: all 0.3s;
        }

        .dtl27 .dtl {
            background: rgba(51, 51, 51, 0.5);
            width: 100%;
            position: absolute;
            height: 100%;
            top: 0;
            left: 0;
            opacity: 0;
            visibility: hidden;
            -webkit-transition: all 0.3s;
            -moz-transition: all 0.3s;
            -o-transition: all 0.3s;
            transition: all 0.3s;
        }

            .dtl27 .dtl h3,
            .dtl27 .dtl p,
            .dtl27 .dtl a {
                position: relative;
                -webkit-transition: all 0.3s;
                -moz-transition: all 0.3s;
                -o-transition: all 0.3s;
                transition: all 0.3s;
            }

            .dtl27 .dtl h3 {
                padding: 15px 15px;
                width: 100%;
                left: -100%;
                background: #333;
                color: #fff;
                font-size: 16px;
                font-weight: normal;
                margin-top: 0px;
                margin-bottom: 0px;
                text-decoration: underline;
            }

            .dtl27 .dtl p {
                padding: 5px 5px;
                font-size: 14px;
                margin-bottom: 0px;
                line-height: 1.2;
                color: #fff;
                top: 0px;
                text-indent: 10px;
            }

            .dtl27 .dtl a {
                margin-right: 5px;
                background: #fff;
                border: 1px solid #ccc;
                border-radius: 2px;
                color: #333;
                top: 0px;
                float: right;
                font-size: 13px;
                padding: 5px 5px;
                text-align: center;
                text-decoration: none;
            }

                .dtl27 .dtl a:hover {
                    background: #e6e6e6;
                    border: 1px solid #adadad;
                }

        .dtl27:hover .dtl h3 {
            left: 0;
        }

        .dtl27:hover .dtl p,
        .dtl27:hover .dtl a {
            top: 0;
        }

        .dtl27:hover .dtl {
            visibility: visible;
            opacity: 1;
        }
</style>

<h2>图片列表</h2>

<p>
    @Html.ActionLink("添加图片", "Create")
</p>

@foreach (MyPhotos.Models.Photos item in Model.DataList)
{
    <div class="item col-lg-3 col-sm-4 col-xs-6" style="padding:5px 5px;">
        <div class="dtl27">
            <a href="~/Photos/Details/@item._pid">
                <img src="~/Images/@item._purl" />
            </a>
            <div class="dtl">
                <h3>标题：@Html.DisplayFor(modelItem => item._ptitle)</h3>
                <p>描述：@Html.DisplayFor(modelItem => item._pdes)</p>
                <ul id="edde">
                    @*<li>
                            <input type="checkbox" id="@item._pid" />
                        </li>*@
                    <li>
                        <img src="~/fonts/Icon/24-Delete-24.png" onclick="return confirm('确定删除？');" id="@item._pid" alt="删除" />
                    </li>
                    <li>
                        <img src="~/fonts/Icon/小图标 (33).png" data-toggle="modal" data-target="#Edit" alt="编辑" id="@item._pid" />
                    </li>
                </ul>
                <ul id="img" width="100%">
                    <li>
                        <img src="~/fonts/Icon/clicksgreen.png" onclick="Edit();" alt="点击率" id="@item._pid" />
                        <span>@Html.DisplayFor(modelItem => item._pclicks)</span>
                    </li>
                    <li>
                        <img src="~/fonts/Icon/download.png" onclick="Download();" alt="下载量" id="@item._pid" />
                        <span>@Html.DisplayFor(modelItem => item._pdownload)</span>
                    </li>
                    <li>
                        <img src="~/fonts/Icon/up.gif" onclick="Edit();" alt="顶" id="@item._pid" />
                        <span>@Html.DisplayFor(modelItem => item._pup)</span>
                    </li>
                    <li>
                        <img src="~/fonts/Icon/down.gif" onclick="Edit();" alt="踩" id="@item._pid" />
                        <span>@Html.DisplayFor(modelItem => item._pdown)</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}
@Html.Raw(Model.PagerHtml())  共 @Model.Total 条
